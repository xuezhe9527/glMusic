   flex-direction: column;
   width: 200rpx;
   margin-right: 20rpx;
}
.indexContainer .recommendContaier .scrollContainer .scrollItem image{
   height: 200rpx;
   width: 200rpx;
   border-radius: 20rpx;
}
.indexContainer .recommendContaier .scrollContainer .scrollItem text{
   font-size: 26rpx;
   /* 单行文本的隐藏 */
