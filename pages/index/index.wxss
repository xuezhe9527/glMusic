   height: 340rpx;
}

.indexContainer .recommendContaier .scrollContainer .scrollItem{
   display: flex;
   flex-direction: column;
   width: 200rpx;
   margin-right: 20rpx;
}
.indexContainer .recommendContaier .scrollContainer .scrollItem image{
   height: 200rpx;
   width: 200rpx;
   border-radius: 20rpx;
}
