@import '/static/iconfont/iconfont.wxss';
page {
   height: 100%;
}

.songContainer {
   display: flex;
   flex-direction: column;
   align-items: center;
   height: 100%;
   flex-shrink: 0;
   background: rgba(0, 0, 0, 0.5);
}

.songContainer .keng {
   width: 60rpx;
   height: 60rpx;
   background: white;
   border-radius: 50%;
   z-index: 4;
}

.songContainer .needle {
   width: 192rpx;
   height: 274rpx;
   position: relative;
   transform-origin: 40rpx 0;
   transform: rotateZ(-20deg);
   left: 58rpx;
   top: -36rpx;
   z-index: 3;
   transition: transform 1s;
}

.songContainer.isplaying .needle {
   transform: rotateZ(0deg);
}

.songContainer .discContainer {
   width: 598rpx;
   height: 598rpx;
   position: relative;
   top: -180rpx;
   animation: discRotate 4s 1s linear infinite;
   animation-play-state: paused;
}

.songContainer.isplaying .discContainer {
   animation-play-state: running;
}

.songContainer .discContainer .disc {
   position: relative;
   width: 100%;
   height: 100%;
   z-index: 2;
}

.songContainer .discContainer .discImg {
   width: 370rpx;
   height: 370rpx;
   position: absolute;
   left: 0;
   right: 0;
   top: 0;
   bottom: 0;
   margin: auto;
   z-index: 1;
}

/* 定义旋转关键帧动画 */

@keyframes discRotate {
   from {
      transform: rotateZ(0deg);
   }

   to {
      transform: rotateZ(360deg);
   }
}

/* musicControl */

.musicControl {
   position: absolute;
   bottom: 40rpx;
   left: 0;
   width: 100%;
   display: flex;
   justify-content: space-between;
   border-top: 1rpx solid #fff;
}

.musicControl text {
   width: 20%;
   text-align: center;
   font-size: 50rpx;
   color: #fff;
   height: 120rpx;
   line-height: 120rpx;
}

.musicControl text.big {
   font-size: 80rpx;
}

.audioContainer {
   position: absolute;
   bottom: 200rpx;
   display: flex;
   width: 640rpx;
   height: 80rpx;
   line-height: 80rpx;
}

.audioContainer .barContainer {
   width: 450rpx;
   height: 4rpx;
   background: rgba(0, 0, 0, 0.4);
   margin: auto;
}

.audioContainer .barContainer .audio-current-time {
   position: relative;
   width: 50%;
   height: 4rpx;
   background: red;
}

.audioContainer .barContainer .audio-current-time .audio-time-point {
   position: absolute;
   top: -4rpx;
   right: -6rpx;
   width: 12rpx;
   height: 12rpx;
   border-radius: 50%;
   background: white;
}
